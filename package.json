{
  "name": "rollup-library-boilerplate",
  "version": "0.0.1",
  "description": "",
  "repository": "",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.module.js",
  "author": "Shota Matsuda",
  "license": "MIT",
  "homepage": "",
  "files": [
    "package.json",
    "README.md",
    "dist/index.js",
    "dist/index.min.js",
    "dist/index.module.js",
    "src"
  ],
  "scripts": {
    "build": "npm-run-all clean main:compile main:uglify",
    "main:compile": "rollup -c",
    "main:uglify": "uglifyjs --compress --mangle --output dist/index.min.js dist/index.js",
    "test": "npm-run-all lint test:compile test:local test:saucelabs",
    "test:compile": "rollup -c rollup.config.unit.js",
    "test:local": "mocha --recursive test/unit",
    "test:browser": "browser-sync start --server . --files dist --startPath test --no-open --no-notify",
    "test:saucelabs": "mocha test/saucelabs.js",
    "lint": "eslint dist/index.module.js src test",
    "prewatch": "npm-run-all main:compile test:compile",
    "watch": "npm-run-all --parallel test:local watch:main watch:test test:browser",
    "watch:main": "nodemon -C --watch rollup.config.js --watch dist/index.module.js --watch src --exec 'npm-run-all main:compile test:local'",
    "watch:test": "nodemon -C --watch rollup.config.unit.js --watch test --exec 'npm-run-all test:compile test:local'",
    "clean": "trash dist/* !dist/index.module.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@takram/eslint-config-planck": "^0.3.1",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.23.6",
    "chai": "^4.1.2",
    "chalk": "^2.3.2",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "mocha": "^5.1.0",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sauce-connect-launcher": "^1.2.4",
    "saucelabs": "^1.4.0",
    "source-map-support": "^0.5.4",
    "trash-cli": "^1.4.0",
    "uglify-js": "^3.3.21"
  },
  "saucelabs": {
    "framework": "mocha",
    "platforms": [
      [
        "Windows 10",
        "microsoftedge",
        "13.10586"
      ],
      [
        "Windows 10",
        "firefox",
        "29.0"
      ],
      [
        "Windows 10",
        "chrome",
        "49.0"
      ],
      [
        "Linux",
        "firefox",
        "29.0"
      ],
      [
        "OS X 10.11",
