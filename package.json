{
  "name": "rollup-library-boilerplate",
  "version": "1.0.1",
  "description": "",
  "repository": "",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.module.js",
  "author": "Shota Matsuda",
  "license": "MIT",
  "homepage": "",
  "files": [
    "package.json",
    "README.md",
    "dist/index.js",
    "dist/index.min.js",
    "dist/index.module.js",
    "src"
  ],
  "scripts": {
    "build": "npm-run-all clean main:compile main:compress",
    "main:compile": "rollup -c",
    "main:compress": "uglifyjs --compress --mangle --output dist/index.min.js dist/index.js",
    "test": "npm-run-all lint test:compile test:node",
    "test:compile": "rollup -c rollup.config.unit.js",
    "test:node": "mocha --recursive test/unit",
    "test:browser": "browser-sync start --server . --files dist --startPath test --no-notify",
    "lint": "npm-run-all lint:main lint:test",
    "lint:main": "standard -v dist/index.module.js src/**/*.js",
    "lint:test": "standard -v --env mocha test/**/*.js",
    "lint-fix": "npm-run-all lint-fix:main lint-fix:test",
    "lint-fix:main": "standard -v --fix src/**/*.js",
    "lint-fix:test": "standard -v --fix --env mocha test/**/*.js",
    "prewatch": "npm-run-all main:compile test:compile",
    "watch": "npm-run-all --parallel test:node watch:main watch:test test:browser",
    "watch:main": "nodemon -C --watch rollup.config.js --watch dist/index.module.js --watch src --exec 'npm-run-all main:compile test:node'",
    "watch:test": "nodemon -C --watch rollup.config.unit.js --watch test --exec 'npm-run-all test:compile test:node'",
    "clean": "trash dist/* !dist/index.module.js"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.23.6",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "mocha": "^5.1.0",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "source-map-support": "^0.5.4",
    "standard": "^11.0.1",
    "trash-cli": "^1.4.0",
    "uglify-es": "^3.3.10"
  }
}
